<!--project.res_config_settings_view_form-->

<odoo>
    <data>
        <!-- Inherit the existing view -->
        <record id="project_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">project.res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <setting id="project_milestone" position="after">
                    <setting id="more_project_kanban_examples"
                             help="Include created project task stages in kanban examples">
                        <field name="more_project_kanban_examples"/>
                    </setting>
                </setting>
            </field>
        </record>
    </data>
</odoo>
